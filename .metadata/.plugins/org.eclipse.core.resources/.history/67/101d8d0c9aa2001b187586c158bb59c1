package fundamentos;

import java.util.Scanner;

public class DesafioConversao {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);

		System.out.println("Digite o primeiro salário: ");
		String salario1 = entrada.nextLine();

		System.out.println("Digite o primeiro salário: ");
		String salario2 = entrada.nextLine();

		System.out.println("Digite o primeiro salário: ");
		String salario3 = entrada.nextLine();

		salario1 = salario1.replace(',', '.');
		salario2 = salario2.replace(',', '.');
		salario3 = salario3.replace(',', '.');

		double salNum1 = Double.parseDouble(salario1);
		double salNum2 = Double.parseDouble(salario2);
		double salNum3 = Double.parseDouble(salario3);

		Double media = salNum1 + salNum2 + salNum3 / 3;

		System.out.println("Sua média salarial: " + media.toString());

		entrada.close();
	}
}
